{% extends 'base.html.twig' %}

{% block title %}Documentation{% endblock %}

{% block body %}
    <redoc
        id="redoc-container"
        spec-url="/api/v1/docs.json"
        required-props-first=true
        hide-download-button=true
        scroll-y-offset="56"
        pagination="none"
        disable-search=false
        disable-sidebar=false
        payload-sample-idx=2
        show-webhook-verb=true
        theme='{
            "sidebar": {
                "backgroundColor": "rgb(248, 249, 250)"
            },
            "spacing": {
                "unit": "5",
                "sectionHorizontal": "40",
                "sectionVertical": "40"
            }
       }'
    ></redoc>
    <script src="/dist/js/redoc.standalone.js"></script>
{% endblock %}